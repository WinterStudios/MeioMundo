<UserControl x:Class="MeioMundoEditor.UsersControls.PluginUControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundoEditor.UsersControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dataPlguin" AutoGenerateColumns="False" CanUserAddRows="False" CellEditEnding="dataPlguin_CellEditEnding">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Activido" Binding="{Binding Enable}" Width="75"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="200"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descrição}" Width="*"/>
                <DataGridTextColumn Header="Versão" Binding="{Binding Versão}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
