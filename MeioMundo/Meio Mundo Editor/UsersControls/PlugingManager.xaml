<UserControl x:Class="MeioMundoEditor.UsersControls.PlugingManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundoEditor.UsersControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{DynamicResource WorkArea.Border}" Padding="0,0,0,14" Margin="10,0" BorderThickness="0,0,0,1" >
            <TextBlock Text="Plugins" Foreground="{DynamicResource WorkArea.Title}" FontSize="24" Margin="20,20,0,0"/>
        </Border>
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Width="200"/>
                <DataGridTextColumn Header="Descrição" Width="*"/>
                <DataGridTextColumn Header="Versao" Width="76"/>
                <DataGridCheckBoxColumn Header="Ativo" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
