<UserControl x:Class="MeioMundo.Editor.API.UserControls.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundo.Editor.API.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="32" Name="UC_ProgressBar" ClipToBounds="True">
    
    <Grid x:Name="UC_Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Border x:Name="UC_Border" BorderThickness="0" BorderBrush="Aqua" Margin="8" CornerRadius="4" Height="8" MinWidth="200">
            <Border x:Name="UC_Rect_Fill" Background="Aqua" HorizontalAlignment="Left" CornerRadius="4" BorderThickness="0"/>
        </Border>
        <TextBlock x:Name="UC_Text_Progress" Width="32" Grid.Column="1" Text="### %" Margin="0,0,8,0" FontSize="10" VerticalAlignment="Center" Foreground="{DynamicResource UC.ProgressBar.Foreground}"/>
    </Grid>
</UserControl>
