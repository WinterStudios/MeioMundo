<UserControl x:Class="MeioMundoWPF.Preferences.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundoWPF.Preferences"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <ComboBox x:Name="themeDropbox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="themeDropbox_SelectionChanged"/>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="100" Margin="174,10,0,0" VerticalAlignment="Top" Width="100" Style="{DynamicResource GroupBoxStyle}"/>

    </Grid>
</UserControl>
