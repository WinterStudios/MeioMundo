<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MeioMundoWPF">

    <SolidColorBrush x:Key="Text" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="Background" Color="#FF282828"/>
    <SolidColorBrush x:Key="Text_low" Color="#FF808080"/>
    <SolidColorBrush x:Key="ProgressBarColor" Color="#FFA0A0A0"/>

    <SolidColorBrush x:Key="TopNavegationBar_Background" Color="#FF353535"/>

    <SolidColorBrush x:Key="Button_Background" Color="#FF353535"/>
    <SolidColorBrush x:Key="Button_Background_Hightlight" Color="#FF404040"/>
    <SolidColorBrush x:Key="Button_Text_Normal" Color="#FF808080"/>


    <SolidColorBrush x:Key="Work_Background" Color="#FF101010"/>
    
    <SolidColorBrush x:Key="Tab_Item_SelectLine" Color="#FF00DCFF"/>
    <SolidColorBrush x:Key="Tab_Item_Select" Color="#FF141414"/>
    <SolidColorBrush x:Key="Tab_Item_Normal" Color="#FF323232"/>

    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>